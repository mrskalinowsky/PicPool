<h2>Listing users</h2>

<table>
    <tr>
        <th>ID</th>
        <th>email</th>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    <% @users.each do |user| %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.fb_name %></td>
        <td><%= link_to 'Pools', user_pools_path(user) %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>
