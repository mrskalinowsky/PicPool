<p id="notice">
    <%= notice %>
</p>

<p>
    <b>Name:</b>
    <%= @pool.name %>
</p>

<p>
    <b>Description:</b>
    <%= @pool.description %>
</p>

<p>
    <b>Photo count:</b>
    <%= @pool.photo_count %>
</p>

<p>
    <b>Public:</b>
    <%= @pool.public %>
</p>

<p>
    <b>Add photos:</b>
    <%= link_to 'Photos', pool_photos_path(@pool) %>

</p><br />

<h2>Photos</h2>
<% unless @photos.empty? %>
<ul>
<% @photos.each do |photo| %>     
    <h2> <%= photo.photo_file_name %> </h2>   
    <%= image_tag(photo.original_image) %>
<% end %>
</ul>
<% end %>



<%= link_to 'Edit', edit_pool_path(@pool) %> |
